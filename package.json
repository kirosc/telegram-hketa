{
  "name": "tg-hketa",
  "version": "2.4.2",
  "engines": {
    "node": "16.x"
  },
  "description": "A telegram bot to get the ETA of HK public transport.",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "NODE_ENV=production node -r source-map-support/register --trace-warnings dist/src/app.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --watch *.ts",
    "dev:app": "npm run dev src/app.ts",
    "build": "npm run update:route && rm -rf dist && tsc && cp -r data dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "update:route": "ts-node src/services/routes.ts",
    "set:webhook": "curl -F \"url=https://$URL/message\" https://api.telegram.org/bot$TOKEN/setWebhook",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "telegram",
    "bot"
  ],
  "author": "Kiros Choi",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@sentry/node": "^6.11.0",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/luxon": "^1.27.1",
    "axios": "^0.21.1",
    "cron": "^1.8.2",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "luxon": "^2.0.1",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.1",
    "source-map-support": "^0.5.19",
    "telegraf": "^4.4.1",
    "telegraf-inline-menu": "^6.3.0",
    "telegraf-stateless-question": "^2.0.1",
    "typescript": "^4.3.5",
    "universal-analytics": "^0.4.23",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/crypto-js": "^4.0.2",
    "@types/universal-analytics": "^0.4.5",
    "@types/xml2js": "^0.4.9",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write"
  }
}
