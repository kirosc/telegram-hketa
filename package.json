{
  "name": "tg-hketa",
  "version": "1.0.1",
  "engines": {
    "node": "12.x"
  },
  "description": "A telegram bot to get the ETA of HK public transport.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --watch .",
    "prod": "now --prod --token=$NOW_TOKEN",
    "local": "now dev",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "update:route": "ts-node src/services/routes.ts",
    "updateRoutes": "node utils/get-routes-NLB.js && node utils/get-routes.js",
    "setWebhook": "curl -F \"url=https://$URL/message\" https://api.telegram.org/bot$TOKEN/setWebhook",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "telegram",
    "bot"
  ],
  "author": "Kiros Choi",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@sentry/node": "^5.18.1",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "apollo-boost": "^0.4.9",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.2.0",
    "graphql-tag": "^2.10.3",
    "luxon": "^1.27.0",
    "module-alias": "^2.2.2",
    "moment": "^2.27.0",
    "node-fetch": "^2.6.1",
    "telegraf": "^4.3.0",
    "telegraf-inline-menu": "^6.2.1",
    "typescript": "^4.2.4",
    "universal-analytics": "^0.4.20",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/luxon": "^1.26.5",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write"
  }
}
